<%-include("template/header", {title:'Página Principal'}) %>
<body class="bg-light m-0 text-dark overflow-hidden">
    <div class="row vh-100 justify-content-center align-items-center">
        <div class="col-md-6 bg-dark vh-100 d-none d-lg-block p-0">
            <div class="bgImg imgA bg-image"></div>
        </div>
        <div class="col">
            <a href="/"><img src="/img/brand/K_dark.png" alt="Logotipo Klouts" style="width: 64px;" class="position-relative start-50 translate-middle"></a>
            <form class="form" action="/login" method="post">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div class="mb-3 text-center">
                            <h1>INICIO DE SESIÓN</h1>
                            <p class="d-none d-md-block lead text-muted">Encontrar la vestimenta que buscabas nunca fue tan fácil y rápido como ahora</p>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="mail" class="form-control" id="mail" placeholder="name@example.com" name="mail">
                            <label for="floatingInput">Tu dirección de E-mail</label>
                          </div>
                          <div class="form-floating">
                            <input type="password" class="form-control" id="pass" placeholder="Password" name="pass">
                            <label for="floatingPassword">Contraseña</label>
                          </div>
                          <br>
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="text-uppercase rounded-0 btn btn-dark">Iniciar sesión</button>
                        </div>
                        <% if (error==true) { %> 
                        <p id="password-fail-msg" class="text-danger text-center" style="display: block;">Email y contraseña no coinciden.</p>
                        <% } %>   
                        <div class="mb-3">
                            <div class="row justify-content-center">
                                <div class="col-auto">
                                    ¿No tienes cuenta? <a href="/register" class="link-info">Registrate aquí</a>
                                </div>
                                <div class="col-auto">
                                    <div class="form-check check-dark">
                                        <input class="form-check-input" type="checkbox" value="" id="form2Example3" checked/>
                                        <label class="form-check-label" for="form2Example3">Recordar ingreso</label>
                                    </div>        
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
<%- include("template/footer") %>