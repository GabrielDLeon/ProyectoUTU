<body class="bg-light m-0 text-dark overflow-hidden">
    <div class="row vh-100 justify-content-center align-items-center">
        <div class="col-md-6 bg-dark vh-100 d-none d-lg-block p-0">
            <div class="bgImg imgB bg-image"></div>
        </div>
        <div class="col">
            <a href="/"><img src="/img/brand/K_dark.png" alt="Logotipo Klouts" style="width: 64px;"
                    class="position-relative start-50 translate-middle"></a>
            <form action="/register" method="POST" class="needs-validation" novalidate>
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div class="mb-3 text-center">
                            <h1 class="text-uppercase">Registro de cuenta</h1>
                            <p class="d-none d-md-block lead text-muted">Encontrar la vestimenta que buscabas nunca fue
                                tan fácil y rápido como ahora</p>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control rounded-0" id="name" name="name"
                                placeholder="Nombre completo" value="{{name}}" required>
                            <label for="name">Nombre completo</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="email" class="form-control rounded-0" id="mail" name="mailUsuario"
                                placeholder="name@example.com" aria-describedby="emailHelp" value="{{mailUsuario}}"
                                required>
                            <label for="mail">E-mail</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control rounded-0" id="pass" name="pass"
                                placeholder="Password" value="{{pass}}" required>
                            <label for="pass">Contraseña</label>
                        </div>
                        <div class="mb-4 form-floating">
                            <input type="password" class="form-control rounded-0" id="pass2" name="passwordConfirm"
                                placeholder="Password" value="{{pass2}}" required>
                            <label for="pass2">Repita la contraseña</label>
                        </div>
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="text-uppercase rounded-0 btn btn-dark">Crear cuenta</button>
                            <small>Nota: Al registrarte estás de acuerdo con nuestros términos y condiciones detallados
                                <a href="/terms">AQUÍ.</a></small>
                        </div>
                        {{#if message }}
                        <div class="d-flex justify-content-center">
                            <div class="alert alert-danger" role="alert" style="width: 70%;">
                                <p class="text-danger text-center mt-1 fw-bold">{{message}}</p>
                                <i class="fas fa-exclamation-triangle d-flex justify-content-center"
                                    style="font-size: 30px;"></i>
                            </div>
                        </div>
                        {{/if}}
                        {{#if registroCompleto }}
                        <div class="d-flex justify-content-center">
                            <div class="alert alert-success" role="alert" style="width: 70%;">
                                <p class="text-success text-center mt-1 fw-bold">{{registroCompleto}}</p>
                                <i class="fas fa-check d-flex justify-content-center" style="font-size: 30px;"></i>
                            </div>
                        </div>
                        {{/if}}
                        <div class="mb-3">
                            <div class="row justify-content-center">
                                <div class="col-auto mb-1">
                                    ¿Ya tienes cuenta? <a href="/login" class="link-info">Iniciar sesión</a>
                                </div>
                                <div class="col-auto">
                                    ¿Eres una empresa? <a href="/registerCompany" class="link-info">Registra tu
                                        empresa</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>