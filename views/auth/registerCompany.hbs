<body class="bg-light m-0 text-dark overflow-hidden">
    <div class="row vh-100 justify-content-center align-items-center">
        <div class="col-md-6 d-none d-lg-block p-0 bg-dark vh-100">
            <div class="bgImg imgC bg-image"></div>
        </div>
        <div class="col">
            <a href="/"><img src="/img/brand/K_dark.png" alt="Logotipo Klouts" style="width: 64px;" class="position-relative start-50 translate-middle"></a>
            <form action="/registerCompany" method="POST">
                <div class="row mx-2 justify-content-center">
                    <div class="col-sm-8 col-xl-7">
                        <div class="mb-3 text-center">
                            <h1 class="text-uppercase">Registro empresa</h1>
                            <p class="d-none d-md-block lead text-muted">Encontrar la vestimenta que buscabas nunca fue tan fácil y rápido como ahora</p>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control rounded-0" id="name" name="name" placeholder="Nombre completo" value="{{name}}">
                            <label for="name">Nombre de la empresa</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="mail" class="form-control rounded-0" id="mail" name="mailEmpresa" placeholder="name@example.com" value="{{mailEmpresa}}">
                            <label for="mail">E-mail</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control rounded-0" id="pass" name="pass" placeholder="Password" value="{{pass}}">
                            <label for="pass">Contraseña</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control rounded-0" id="pass2" name="passwordConfirm" placeholder="Password" value="{{pass2}}">
                            <label for="pass2">Repita su contraseña</label>
                        </div>
                        <div class="mb-4">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control rounded-0" id="rut" name="rut" placeholder="RUT" value="{{rut}}">
                                        <label for="rut">RUT</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating">
                                        <select class="form-select text-center" aria-label="Default select example" name="razon" id="razon">
                                            <option selected>Razón social</option>
                                            <option value="SA">Sociedad Anónima</option>
                                            <option value="SL">Sociedad Limitada</option>
                                            <option value="SC">Sociedad Cooperativa</option>
                                            <option value="SLNE">Sociedad Limitada Nueva Empresa</option>
                                            <option value="SLL">Sociedad Limitada Laboral</option>
                                            <option value="SAL">Sociedad Anónima Laboral</option>
                                            <option value="SCS">Sociedad Comanditaria Simple</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="text-uppercase rounded-0 btn btn-dark">Registrar empresa</button>
                        </div>
                        {{#if message }}
                            <p class="text-danger text-center mt-1">{{message}}</p>
                        {{/if}}
                        {{#if registroCompleto }}
                            <p class="text-success text-center mt-1">{{registroCompleto}}</p>
                        {{/if}}
                        <div class="mb-3">
                            <div class="row justify-content-center">
                                <div class="col-auto mb-1">
                                    ¿Ya tienes cuenta? <a href="/login" class="link-info">Iniciar sesión</a>
                                </div>
                                <div class="col-auto">
                                    <a href="/register" class="link-info">Registra tu cuenta personal</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>