<body class="bg-light m-0 text-dark overflow-hidden">
    <div class="row vh-100 justify-content-center align-items-center">
        <div class="col-md-6 bg-dark vh-100 d-none d-lg-block p-0">
            <div class="bgImg imgB bg-image"></div>
        </div>
        <div class="col">
            <a href="/"><img src="/img/brand/K_dark.png" alt="Logotipo Klouts" style="width: 64px;" class="position-relative start-50 translate-middle"></a>            
            <form action="/signup" method="POST">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div class="mb-3 text-center">
                            <h1 class="text-uppercase">Registro de cuenta</h1>
                            <p class="d-none d-md-block lead text-muted">Encontrar la vestimenta que buscabas nunca fue tan fácil y rápido como ahora</p>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control rounded-0" id="name" name="name" placeholder="Nombre completo" value="{{name}}">
                            <label for="name">Nombre completo</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="email" class="form-control rounded-0" id="mail" name="mail" placeholder="name@example.com" aria-describedby="emailHelp" value="{{mailUsuario}}">
                            <label for="mail">E-mail</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control rounded-0" id="pass" name="pass" placeholder="Password" value="{{pass}}">
                            <label for="pass">Contraseña</label>
                        </div>
                        <div class="mb-4 form-floating">
                            <input type="password" class="form-control rounded-0" id="pass2" name="pass2" placeholder="Password" value="{{pass2}}">
                            <label for="pass2">Repita la contraseña</label>
                        </div>
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="text-uppercase rounded-0 btn btn-dark">Crear cuenta</button>
                        </div>
                        {{#if error }}
                            <p id="password-fail-msg" class="text-danger text-center" style="display: block;">Los datos ingresados no son correctos</p>
                        {{/if}}
                        {{#if message }}
                            <h4 class="alert alert-danger mt-4">{{message}}</h4>
                        {{/if}}
                        <div class="mb-3">
                            <div class="row justify-content-center">
                                <div class="col-auto mb-1">
                                    ¿Ya tienes cuenta? <a href="/login" class="link-info">Iniciar sesión</a>
                                </div>
                                <div class="col-auto">
                                    ¿Eres una empresa? <a href="/signupCompany" class="link-info">Registra tu
                                        empresa</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>