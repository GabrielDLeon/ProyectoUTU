{{>navigation}}
<body style="overflow-x: hidden;">
    <div class="row">

        {{!-- SIDEBAR --}}
        <div class="col-md-12 col-lg-4 align-middle" id="sidebar" style="background-color: #fafafa;">
            <div class="sticky-top p-lg-2 p-xl-4">
                <div class="p-5">
                    <div class="row justify-content-center">
                        <div class="col-6 mb-4">
                            {{#if profile.fotoPerfil}}
                                <img src="data:imagen/png;base64, {{profile.fotoPerfil}}" alt="Generic placeholder image" class="img-fluid rounded-circle" style="width: max-content; z-index: 1" id="imagen">
                            {{else}}
                                <img src="/img/avatar.png" alt="Generic placeholder image" class="img-fluid rounded-circle" style="width: max-content; z-index: 1" id="imagen">
                            {{/if}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <h2 class="text-center text-uppercase">{{data.nombre}}</h2>
                                <p>{{profile.descripcion}}</p>
                                {{!-- <p style="font-size: 1rem;">{{profile.descripcion}}</p> --}}
                            </div>
                            <div class="row">
                                <div class="col-auto">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="col-auto mb-1">
                                    <p class="m-0"><strong>Dirección</strong></p>
                                    <span class="text-muted">
                                        {{#if profile.direccion}}
                                            {{profile.direccion}}
                                        {{else}}
                                            <p>No se ha proporcionado dirección</p>
                                        {{/if}}
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-auto">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="col-auto mb-1">
                                    <p class="m-0"><strong>Teléfono</strong></p>
                                    <span class="text-muted">
                                        {{#if profile.telefono}}
                                            {{profile.telefono}}
                                        {{else}}
                                            <p>No se ha proporcionado teléfono</p>
                                        {{/if}}
                                    </span>
                                    <p class="text-muted"></p>
                                </div>
                            </div>
                            
                            {{#if redes}}
                                <div class="row">
                                    <h6 class="text-center">Nuestras redes sociales</h6>
                                    {{#each redes}}
                                        {{#ifCond tipo '==' 'Instagram'}}
                                            <div class="col-12 my-md-1 my-sm-2 text-muted d-flex justify-content-center">
                                                <a class="link-unstyled" href="{{URL}}" target="_blank"><i class="fab fa-instagram"></i> {{nombre}} en Instagram</a>
                                            </div>
                                        {{/ifCond}}
                                        {{#ifCond tipo '==' 'Facebook'}}
                                            <div class="col-12 my-md-1 my-sm-2 text-muted d-flex justify-content-center">
                                                <a class="link-unstyled" href="{{URL}}" target="_blank"><i class="fab fa-facebook"></i> {{nombre}} en Facebook</a>
                                            </div>
                                        {{/ifCond}}
                                        {{#ifCond tipo '==' 'Whatsapp'}}
                                            <div class="col-12 my-md-1 my-sm-2 text-muted d-flex justify-content-center">
                                                <a class="link-unstyled" href="{{URL}}" target="_blank"><i class="fab fa-whatsapp"></i> {{nombre}} en Whatsapp</a>
                                            </div>
                                        {{/ifCond}}
                                    {{/each}}
                                </div>
                            {{/if}}
                            {{#ifCond data.email '==' user.email}}
                                <div class="col-12 my-2 text-muted d-flex justify-content-center">
                                    <a href="/profile/edit/{{user.id}}">
                                        <button type='submit' class="btn btn-primary">Editar perfil</button>
                                    </a>
                                </div>
                            {{/ifCond}}
                            {{#ifCond user.tipo '==' 'usuario'}}
                                <div class="col-12 my-2 text-muted d-flex justify-content-center">
                                    <a href="/">
                                        <button type='submit' class="btn btn-success">Seguir cuenta</button>
                                        {{!-- <button type='submit' class="btn btn-danger">Dejar de seguir</button> --}}
                                    </a>
                                </div>
                            {{/ifCond}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {{!-- CONTENIDO --}}
        <div class="col-md-12 col-lg-8 col-xl-8 me-auto ms-auto" id="content">
            <div class="container my-4">
                <h2 class="text-center">Publicaciones de {{data.nombre}}</h2>
                <div class="row row-cols-xl-3 row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
                    {{#if publicacion}}
                        {{#each publicacion}}
                            <div class="col position-relative my-3">
                                <div class="card">
                                    <a href="/publication/{{nroPublicacion}}" class="link-unstyled">
                                        <div class="imgbox">
                                            {{#if imagen}}
                                                <img src="data:imagen/png;base64, {{imagen}}" class="card-img-top">
                                            {{else}}
                                                <img src="/img/testing/item3.jpg" class="card-img-top">
                                            {{/if}}
                                        </div>
                                    </a>
                                    <div class="position-absolute p-1 mb-2 text-capitalize">
                                        <span class="badge rounded-pill bg-dark">{{categoria}}</span>
                                        <span class="badge rounded-pill bg-dark">{{genero}}</span>
                                        <span class="badge rounded-pill bg-dark">{{material}}</span>
                                        <span class="badge rounded-pill bg-dark">{{marca}}</span>
                                    </div>
                                    <div class="container my-2 text-center">
                                        <div>
                                            <a href="/publication/{{nroPublicacion}}" class="link-unstyled">
                                                {{!-- <h6 class="card-title mb-1">{{titulo}}</h6> --}}
                                            </a>
                                        </div>
                                        <div>
                                            {{!-- <div class="d-flex"> --}}
                                                <h4>${{precio}}</h4>
                                                {{!-- <h6 class="text-muted ms-1"><s>$500</s></h6> --}}
                                            {{!-- </div> --}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</body>
{{>footer}}