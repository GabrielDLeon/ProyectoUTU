<body>
    <div class="container mt-5">
        <div class="row row-cols-lg-4 row-cols-sm-2 g-4">
            {{#if publicacion}}
            {{#each publicacion}}
            <div class="col">
                <a href="/publication/{{nroPublicacion}}" class="link-unstyled">
                    <div class="card rounded-0">
                        <div class="imgbox">
                            {{#if imagen}}
                            <img alt="Embedded Image" src="data:imagen/png;base64, {{imagen}}" class="card-img-top">
                            {{else}}
                            <img src="/img/testing/item3.jpg" class="card-img-top">
                            {{/if}}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-1">{{titulo}}</h5>
                            <h6><a href="/profile/{{vendedor}}" class="text-muted link-unstyled">{{vendedor}}</a></h6>
            
                            <div class="d-flex">
                                <h4>${{precio}}</h4>
                                <h6 class="text-muted ms-1"><s>$2000</s></h6>
                            </div>

                            {{!-- CUANDO NO HAY PRECIO ASIGNADO APARECE ESTE BOTON --}}
