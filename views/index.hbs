            <div class="carousel-inner">
                <div class="carousel-item active " data-bs-interval="5000">
                    <img src="/img/testing/aliex.png" class="d-block w-50 mx-auto" alt="/img/testing/aliex.png">
                </div>
                <div class="carousel-item " data-bs-interval="5000">
                    <img src="/img/testing/tiendamia.png" class="d-block w-50 mx-auto" alt="/img/testing/aliex.png">
                </div>
                <div class="carousel-item " data-bs-interval="5000">
                    <img src="/img/testing/mercado.jpg" class="d-block w-50 mx-auto" alt="/img/testing/aliex.png">
